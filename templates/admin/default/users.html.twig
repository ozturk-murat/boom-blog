{% extends "admin/base.html.twig" %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-4">
            </div>
            <div class="col-12">
                <div class="my-3 p-3 bg-white rounded box-shadow rounded shadow-sm">
                        <h6 class="border-bottom border-gray pb-2 mb-0">Users</h6>
                        <div class="media text-muted pt-3">
                            <div class="col-1">
                                <img data-src="holder.js/32x32?theme=thumb&amp;bg=007bff&amp;fg=007bff&amp;size=1" alt="32x32" class="mr-2 rounded" src="https://upload.wikimedia.org/wikipedia/commons/b/b9/Solid_red.png"                             data-holder-rendered="true" style="width: 52px; height: 52px;">
                            </div>
                            <div class="col-9 lh-125 border-bottom border-gray">
                                <div class="media-body pb-3 mb-0 small lh-125">
                                    <div class="d-flex justify-content-between align-items-center w-100">
                                        <strong class="text-gray-dark">Full Name | Role</strong>

                                    </div>
                                    <span class="d-block">@username</span>
                                </div>
                            </div>
                            <div class="col-2 d-flex justify-content-center align-items-center pb-3 mb-0 small lh-125 border-bottom border-gray">
                                <button type="button" class="btn btn-outline-primary dropdown-toggle mr-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Role
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Separated link</a>
                                </div>
                                <button type="button" class="btn btn-outline-danger mr-2">Delete</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}